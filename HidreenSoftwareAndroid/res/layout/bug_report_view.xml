<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="@drawable/white_gradation">
  <TextView
    android:id="@+id/report_text"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_weight="1" android:textColor="#000000" android:padding="5dp"/>
	<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  >
	  <Button android:id="@+id/send_report"
	    android:layout_width="wrap_content" 
	    android:layout_height="fill_parent" 
	    android:layout_weight="1" android:text="Send"/>
	  
  </LinearLayout>
</LinearLayout>
