
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/white_gradation" android:orientation="vertical">
        <RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/black_gradiation">
            <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20dp" android:textStyle="bold" android:textColor="#FFFFFF" android:text="Edit Profile" android:layout_centerHorizontal="true" android:padding="5dp"></TextView>
        </RelativeLayout>
        <ScrollView android:id="@+id/scrollView1" android:layout_height="wrap_content" android:layout_width="fill_parent">
            <LinearLayout android:id="@+id/linearLayout2" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout3" android:layout_width="fill_parent" android:orientation="vertical" android:padding="5dp">
                    <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Name" android:textColor="#000000" android:textStyle="bold"></TextView>
                    <EditText android:layout_height="wrap_content" android:id="@+id/txtName" android:layout_width="fill_parent"></EditText>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:padding="5dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout5">
                    <TextView android:textColor="#000000" android:layout_height="wrap_content" android:text="Country" android:textStyle="bold" android:id="@+id/textView4" android:layout_width="wrap_content"></TextView>
                    <EditText android:id="@+id/txtCountry" android:layout_height="wrap_content" android:layout_width="fill_parent"></EditText>
                </LinearLayout>
                <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout4" android:layout_width="fill_parent" android:orientation="vertical" android:padding="5dp">
                    <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="City" android:textColor="#000000" android:textStyle="bold"></TextView>
                    <EditText android:layout_height="wrap_content" android:id="@+id/txtCity" android:layout_width="fill_parent"></EditText>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:padding="5dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/LinearLayout01">
                    <TextView android:textColor="#000000" android:layout_height="wrap_content" android:text="Phone" android:textStyle="bold" android:id="@+id/TextView01" android:layout_width="wrap_content"></TextView>
                    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/txtPhone"></EditText>
                </LinearLayout>
                <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout7" android:layout_width="fill_parent" android:orientation="vertical" android:padding="5dp">
                    <TextView android:id="@+id/textView6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Timezone" android:textColor="#000000" android:textStyle="bold"></TextView>
                    <Spinner android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/cbTimezone"></Spinner>
                </LinearLayout>
                <FrameLayout android:layout_height="wrap_content" android:id="@+id/frameLayout1" android:layout_width="wrap_content" android:layout_gravity="center" android:padding="5dp">
                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_green" android:id="@+id/btnSaveProfile" android:text="   Save   " android:textColor="#FFFFFF"></Button>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
