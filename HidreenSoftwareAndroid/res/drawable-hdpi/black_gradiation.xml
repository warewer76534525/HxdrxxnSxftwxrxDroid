<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FDD017"
                android:endColor="#AF7817"
                android:angle="270" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#F88017"
                android:startColor="#F87217"
                android:angle="270" />
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient
                android:endColor="#000000"
                android:startColor="#545454"
                android:angle="270" />
        </shape>
    </item>
</selector>
